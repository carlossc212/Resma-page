<style>
    section{
        padding: 0 11%;
        padding-top: 50px;
    }

    h2{
        font-size: 3rem;
        display: block;
        background: linear-gradient(90deg, rgba(163,204,63,1) -80%, rgba(34,120,222,1) 200%);
        background-clip: text;
        color: transparent;
        width: fit-content;
        margin-left: auto;
    }

    .bento{
        display: grid;
        gap: 10px;
        grid-template-columns: repeat(10, 1fr);
        grid-auto-rows: 1fr;
    }

    .item{
        border-radius: 20px;
        overflow: hidden;
        padding: 20px;
        
        position: relative;
        color: black;
        text-shadow: 1px 1px 2px black;
        
    }
    .item::before{
        background-size: cover;
        background-position: center center;
        
        content: "";
        position: absolute;
        inset: 0;
        z-index: -1;
        
        filter: blur(3px);  
        transition: filter 0.4s ease;
    }

    .item:hover::before{
        filter: none;
    }

    .item h4{
        font-size: 2.5rem;          
    }

    .item p, .item h4{
    }

    .item-1::before{
        background-image: url("/p1.jpg");
    }

    .item-2::before{
        background-image: url("/desktop-dev.jpg");
    }

    .item-3::before{
        background-image: url("/tech-consulting.jpg");
    }

    .item-4::before{
        background-image: url("/web-dev.jpg");
    }
</style>