---
import BentoItem from "../BentoItem.astro"
---
<section id="projects">
    <h2>Our Projects</h2>
    <div class="bento">
        <BentoItem colSpan={7} rowSpan={2} class="item item-1">
            <h4>SmartConnect</h4>
        </BentoItem>
        <BentoItem colSpan={3} rowSpan={1} class="item item-2">
            <h4>WebXpress</h4>
        </BentoItem>
        <BentoItem colSpan={3} rowSpan={2} class="item item-3">
            <h4>TaskFlow</h4>
        </BentoItem>
        <BentoItem colSpan={7} rowSpan={1} class="item item-4">
            <h4>DataSync</h4>
        </BentoItem>

    </div>
</section>

<style>
    section{
        padding: 0 11%;
        padding-top: 50px;
    }

    h2{
        font-size: 3rem;
        display: block;
        background: linear-gradient(90deg, rgba(163,204,63,1) -80%, rgba(34,120,222,1) 200%);
        background-clip: text;
        color: transparent;
        width: fit-content;
        margin-left: auto;
    }

    .bento{
        display: grid;
        gap: 10px;
        grid-template-columns: repeat(10, 1fr);
        grid-auto-rows: 300px;
    }

    .item{
        border-radius: 20px;
        overflow: hidden;
        padding: 20px;
        
        position: relative;
        color: black;
        text-shadow: 1px 1px 2px black;
        
    }
    .item::before{
        background-size: cover;
        background-position: center center;
        
        content: "";
        position: absolute;
        inset: 0;
        z-index: -1;
        
        filter: blur(8px) opacity(0.8);  
        transition: filter 0.4s ease;
    }

    .item:hover::before{
        filter: none;
    }

    .item h4{
        font-size: 2.5rem;          
    }

    .item p, .item h4{
    }

    .item-1::before{
        background-image: url("/p1.jpg");
    }

    .item-2::before{
        background-image: url("/desktop-dev.jpg");
    }

    .item-3::before{
        background-image: url("/tech-consulting.jpg");
    }

    .item-4::before{
        background-image: url("/web-dev.jpg");
    }

    @media screen and (max-width:1200px) {
        .bento{
            grid-auto-rows: 200px;
        }
    }

    @media screen and (max-width:992px) {
        .bento{
            grid-auto-rows: 200px;
        }

        .item-1{
            grid-column: span 10;
            grid-row: span 2;
        }

        .item-2{
            grid-column: span 6;
            grid-row: span 1;
        }

        .item-3{
            grid-column: span 4;
            grid-row: span 1;
        }

        .item-4{
            grid-column: span 10;
            grid-row: span 1;
        }
    }

    @media screen and (max-width:768px) {
        .item{
            grid-column: span 5;
            grid-row: span 1;
        }
    }

    @media screen and (max-width:576px) {
        .item{
            grid-column: span 10;
            grid-row: span 1;
        }
        
        h2{
            font-size: clamp(2rem, 0.659rem + 6.504vw, 3rem);
            margin: 20px auto;
        }
    
    }
</style>