---
import { Image } from "astro:assets";
import PhoneIcon from "../../assets/icons/phone.svg"
import EmailIcon from "../../assets/icons/email.svg"

//Social Icons
import FacebookIcon from "../icons/Facebook.astro"
import InstagramIcon from "../icons/Instagram.astro"
import TelegramIcon from "../icons/Telegram.astro"
import TwitterIcon from "../icons/Twitter.astro"
import WhatsappIcon from "../icons/Whatsapp.astro"

---
<footer>
    <div class="newsletter">
        <p>
            Subscribe to our newsletter
        </p>
        <form>
            <div class="send-email">
                <input type="email" placeholder="Enter your email" />
                <button>Subscribe</button>
            </div> 
        </form>
    </div>

    <div class="footer">
        <div class="wrapper">
            <div class="create">
                <h4>
                    <span class="text">Let's Create</span> 
                    <span class="logo">
                        <img src="/favicon.svg" alt="Logo">
                    </span>
                </h4>
                <p>Every project starts with a chat. Resma leads the client conversations and will be happy to discuss your projects. We will also pull in the right people from the team when needed.</p>
            </div>
            <div class="info">
                <div class="contact">
                    <p>
                        <Image src={PhoneIcon} alt="Phone icon" />
                        +34 000 000 000
                    </p>
                    <p>
                        <Image src={EmailIcon} alt="Email icon" />
                        resma.program@gmail.com
                    </p>
                    <div class="social">
                        <a href="">
                            <FacebookIcon />
                        </a>
                        <a href="">
                            <InstagramIcon />
                        </a>
                        <a href="">
                            <TelegramIcon />
                        </a>
                        <a href="">
                            <TwitterIcon />
                        </a>
                        <a href="">
                            <WhatsappIcon />
                    </div>
                </div>                
            </div>
        </div>
    </div>
</footer>

<style>
    footer{
        margin-top: 80px;
    }

    .newsletter{
        background-color: beige;
        text-align: center;
        padding: 30px 0;
    }

    form{
        padding: 0 20px;
    }

    input, button{
        margin: 0;
        padding: 0;
        border: 0;
        padding: 5px 10px;
        border-radius: inherit;
    }

    input{
        flex: 1;
        outline: 1px solid transparent;
        font-size: .9rem;
    }

    button{
        transition: transform 0.1s linear;
        background-color: blueviolet;
        color: white;
        margin: 1px;
        cursor: pointer;
        font-size: .9rem;
    }

    button:hover, button:focus{
        transform: scale(1.1);
    }

    .send-email{
        display: flex;
        margin: 0 auto;
        min-width: fit-content;
        max-width: 320px;
        overflow: hidden;

        border-radius: 30px;
        background-color: white;
        box-shadow: 0px 0px 16px 0px rgba(0,0,0,0.35);
        box-sizing: border-box;
        transition: all 0.15s linear;
        outline: 1px solid transparent;
    }

    .send-email:has(input:focus){
        outline: 1px solid rgb(128, 144, 238);
    }

    .footer{
        padding: 0 11%;
        padding-top: 50px;
        background-color: lightblue;
    }

    .wrapper{
        display: flex;
        align-items: center;
    }

    .create{
        flex: 1;
    }

    .create h4{
        font-size: 2rem;
        margin: 0;
        display: flex;
        justify-content: flex-start;
        align-items: center;
    }

    .logo{
        width: 50px;   
        height: 50px;  
        display: inline-block;
    }

    .logo img{
        width: 100%;

        aspect-ratio: 1/1;
    }

    .info{
        flex: 1;
    }

    .info p{
        display: flex;
        align-items: center;
        gap: 10px;
        
    }

    .contact{
        width: fit-content;
        margin-left: auto;
    }
    .social{
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 30px;
    }

    .social a{
        color: black;
        width: 25px;
        height: 25px;
        transition: transform 0.1s linear;
    }

    .social a:hover{
        transform: scale(1.1);
    }

    .social a svg{
        width: 100%;
        height: 100%;
    }

    @media screen and (max-width:768px) {
        .wrapper{
            flex-direction: column;
            padding-bottom: 30px;
        }

        .info{
            width: 100%;
        }
        
        .contact{
            margin: 0 auto;
        }
    }
</style>