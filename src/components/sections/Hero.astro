---
import Bubbles from '../Bubbles.astro';
import Button from '../Button.astro';
---
<section id="home">
    <div class="background">
        <Bubbles/>
    </div>
    
    <div class="text">
        <h1>
            <span>The Path to</span><br>
            <span>your Digital</span><br>
            <span>Transformation</span>
        </h1>
        <h3>With a blend of creativity and innovation, we craft bespoke solutions that resonate with your target audience.</h3>
        <br>
        <Button href="#projects">See more >></Button>
    </div>

    <div class="image">
        <img src="/mobile_hand.png">
    </div>
</section>

<style>
    section{
        display: flex;
        padding: 0 11%;
        position: relative;
        min-height: 100vh;
        box-sizing: border-box;
        padding-top: 150px;
        justify-content: center;
        align-items: center;
        align-content: center;
        gap: 50px;
        flex-flow: row wrap;
    }

    .text, .image{
        flex: 1;
    }

    .image img{
        max-width: 100%;
        width: 80%;
        mask-image: linear-gradient(to right, rgb(0, 0, 0) 90%, transparent 100%);
    }

    .background{
        position: absolute;
        overflow: hidden;
        inset: 0;
        width: 100%;
        height: 100%;
        z-index: -9999;
        opacity: 0.3;
    }
    
    h1 {
        font-size: clamp(2.9rem, 0.225rem + 4.314vw, 4rem);
        text-align: left;
        padding: 0;
        margin: 0;
        color: transparent;
        display: block;
        background: linear-gradient(145deg, rgb(122, 88, 233) 0%, rgb(116, 108, 124) 50%);
        background-clip: text;
    }

    h3{
        font-weight: 400;
        font-size: clamp(1rem, 0.514rem + 0.784vw, 1.2rem);
        padding-right: 70px;
        color: rgba(0, 0, 0, 0.65);
    }

    @media screen and (max-width:992px){
        section{
            padding: 0 5%;
            padding-top: 150px;
            max-width: 100%;
        }
        .text, .image{
            flex: 1 1 100%;
        }

        .image{
            display: flex;
            justify-content: center;
            position: relative;`
        }

        .image img{
            width: 60%;
            margin: 0 auto;
        }
    }

    @media screen and (max-width:576px) {
        h1{
            font-size: clamp(2.2rem, 1.261rem + 4.553vw, 2.9rem);
        }

        h3{
            font-size: clamp(0.9rem, 0.766rem + 0.65vw, 1rem);
        }
    }
</style>