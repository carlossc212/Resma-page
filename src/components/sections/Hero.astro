---
import Bubbles from '../Bubbles.astro';
import Button from '../Button.astro';
---
<section>
    <div class="background">
        <Bubbles/>
    </div>
    
    <div class="text">
        <h1>
            <span>The Path to</span> <br>
            <span>your Digital</span><br>
            <span>Transformation</span>
        </h1>
        <h3>With a blend of creativity and innovation, we craft bespoke solutions that resonate with your target audience.</h3>
        <br>
        <Button>See more >></Button>
    </div>

    <div class="image">
        <img src="/mobile_hand.png">
    </div>
</section>

<style>
    section{
        display: flex;
        padding: 0 11%;
        position: relative;
        height: 100vh;
        padding-top: 5;
    }

    .text, .image{
        min-width: 50%;
    }

    .image img{
        max-width: 100%;
        width: 80%;
        mask-image: linear-gradient(to right, rgb(0, 0, 0) 90%, transparent 100%);
    }

    .background{
        position: absolute;
        overflow: hidden;
        inset: 0;
        width: 100%;
        height: 100%;
        z-index: -9999;
        opacity: 0.3;
    }


    .text{
        margin-top: 240px;
    }

    .image{
        margin-top: 150px;
    }
    
    h1 {
        font-size: 4rem;
        text-align: left;
        padding: 0;
        margin: 0;
        color: transparent;
        display: block;
        background: linear-gradient(145deg, rgb(122, 88, 233) 0%, rgb(116, 108, 124) 50%);
        background-clip: text;
    }

    h3{
        font-weight: 400;
        padding-right: 70px;
        color: rgba(0, 0, 0, 0.65);
    }
</style>