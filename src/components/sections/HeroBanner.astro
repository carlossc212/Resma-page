<style>
    section{
        box-sizing: border-box;
        width: 100%;
        margin-top: 80px;
        padding: 80px 0;
    }

    .wrapper{
        background-color: rgb(229, 229, 236);
        width: 100%;
        height: 100%;
        display: flex;
        flex-flow: row wrap;
        justify-content: space-around;
        align-items: center;
        align-content: center;
        color: rgb(51, 51, 51);
        background-image: url("../../assets/noise.svg" );
        border-top: 2px solid rgba(128, 128, 128, 0.2);
        border-bottom: 2px solid rgba(128, 128, 128, 0.2);
        gap: 30px;
    }

    h3{
        flex: 1 1 100%;
        text-align: center;
        font-size: 2.4rem;
        margin-bottom: 0;
    }

    .card{
        flex: 0 0 320px;
        text-align: center;
        border: 2px solid rgba(103, 103, 141, 0.5);
        font-weight: 300;
        font-size: 1rem;
        padding: 10px;
        padding-top: 30px;
        position: relative;
        bottom: -80px;
        background-color: rgb(247, 247, 247);
    }

    h5{
        font-family: Poppins, sans-serif;
        font-size: 1.2rem;
        font-weight: 500;
    }

    .icon{
        margin: 0 auto;
        width: 20%;
    }

    @media screen and (max-width:576px) {
        section{
            margin-top: 0;
        }
        
        .card{
            flex-shrink: 1;
            margin: 0 20px;
        }
    }
</style>