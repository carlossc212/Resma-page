---
const { colSpan, rowSpan, class:className, ...rest } = Astro.props;
---

<article style=`--bentocolspan: ${colSpan}; --bentorowspan: ${rowSpan}` class={className} {...rest}>
    <slot />
</article>

<style>
    article {
        grid-column: span var(--bentocolspan);
        grid-row: span var(--bentorowspan);
        box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 2px 6px 2px;
    }
</style>